<!-- Google Fonts for Luxury Feel -->
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Inter:wght@100..900&display=swap" rel="stylesheet">

<div class="magda-mega-menu">
  <!-- Custom "View" Circle Cursor -->
  <div id="magda-custom-cursor" class="magda-custom-cursor">
    <span>View</span>
  </div>

  <div class="magda-mega-menu__inner">
    <div class="magda-mega-menu__split-layout">

      <!-- Left Column: Master Collections List -->
      <div class="magda-mega-menu__links-col">
        <nav class="magda-mega-menu__nav" aria-label="Collections">
          <ul class="magda-mega-menu__collections-list">
            {%- for collection in collections -%}
              <li class="magda-mega-menu__collection-item">
                <a
                  href="{{ collection.url }}"
                  class="magda-mega-menu__collection-link {% if forloop.first %}is-active{% endif %}"
                  data-collection-handle="{{ collection.handle }}"
                  data-collection-image="{% if collection.featured_image != blank %}{{ collection.featured_image | image_url: width: 1000 }}{% endif %}"
                  {{ collection.shopify_attributes }}>
                  <span class="magda-link-text">{{ collection.title | upcase }}</span>
                  <span class="magda-link-count">({{ collection.all_products_count }})</span>
                </a>
              </li>
            {%- else -%}
              <li class="magda-mega-menu__collection-item">
                <span class="magda-mega-menu__collection-link">Discover Collections</span>
              </li>
            {%- endfor -%}
          </ul>
        </nav>
      </div>

      <!-- Center Column: Featured Visual -->
      <div class="magda-mega-menu__image-col">
        <div class="magda-mega-menu__showcase">
          <div class="magda-mega-menu__preview-frame">
            {%- if collections.size > 0 -%}
              <div class="magda-img-container" id="mega-menu-image-container">
                <img
                  id="mega-menu-preview-image"
                  src="{% if collections.first.featured_image != blank %}{{ collections.first.featured_image | image_url: width: 1000 }}{%- else -%}{{ 'lifestyle-1' | placeholder_svg_tag }}{%- endif -%}"
                  alt="{{ collections.first.title | escape }}"
                  class="magda-mega-menu__preview-img"
                  width="1000"
                  height="1300"
                  loading="eager">
              </div>
            {%- else -%}
              <div class="magda-placeholder-frame">
                {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {%- endif -%}

            <div class="magda-mega-menu__overlay">
              <span id="mega-menu-active-title" class="magda-overlay-title">{{ collections.first.title }}</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column: Dynamic Featured Products -->
      <div class="magda-mega-menu__products-col">
        <div class="magda-products-track" id="mega-menu-products-track">
          {%- for collection in collections -%}
            <div class="magda-products-group {% if forloop.first %}is-active{% endif %}" data-target-handle="{{ collection.handle }}">
              <div class="magda-products-grid">
                {%- for product in collection.products limit: 2 -%}
                  <a href="{{ product.url }}" class="magda-menu-product-card">
                    <div class="magda-menu-product-img">
                      {{ product.featured_media | image_url: width: 400 | image_tag: loading: 'lazy' }}
                    </div>
                    <div class="magda-menu-product-info">
                      <span class="magda-product-title">{{ product.title }}</span>
                      <span class="magda-product-price">{{ product.price | money }}</span>
                    </div>
                  </a>
                {%- endfor -%}
              </div>
              <div class="magda-related-links">
                <a href="{{ collection.url }}" class="magda-related-link">Shop The Edit</a>
                <a href="{{ routes.all_products_collection_url }}" class="magda-related-link">View All Items</a>
              </div>
            </div>
          {%- endfor -%}
        </div>
      </div>

    </div>
  </div>
</div>

<style>
  /* Variables */
  :root {
    --lux-serif: 'Playfair Display'
    , serif;
    --lux-sans: 'Inter'
    , sans-serif;
    --lux-grey: #f7f7f7;
    --lux-text-soft: #b0b0b0;
    --lux-black: #111111;
  }

  /* Custom Cursor */
  .magda-custom-cursor {
    position: fixed;
    top: 0;
    left: 0;
    width: 60px;
    height: 60px;
    background: var(--lux-black);
    color: #fff;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    pointer-events: none;
    z-index: 99999;
    opacity: 0;
    transform: translate(-50%, -50%) scale(0);
    transition: transform 0.4s cubic-bezier(0.23, 1, 0.32, 1)
    , opacity 0.3s ease;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-family: var(--lux-sans);
    font-weight: 500;
  }

  .magda-mega-menu__inner {
    padding: 0;
    max-width: 100%;
    margin: 0 auto;
  }

  .magda-mega-menu__split-layout {
    display: grid;
    grid-template-columns: 1fr 280px 320px;
    /* Three column split */
    gap: 4rem;
    align-items: start;
    padding: 1rem 0;
  }

  /* Title Column */
  .magda-mega-menu__collections-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.5rem 2rem;
    /* Reduced Gap */
  }

  .magda-mega-menu__collection-link {
    font-family: var(--lux-sans);
    font-size: 1.3rem;
    text-decoration: none;
    color: var(--lux-text-soft);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 400;
    display: inline-flex;
    align-items: center;
    gap: 0.8rem;
    position: relative;
    padding: 1rem 0;
    transition: all 0.2s ease;
    cursor: none;
  }

  .magda-mega-menu__collection-link.is-active,
  .magda-mega-menu__collection-link:hover {
    color: var(--lux-black);
    font-family: var(--lux-serif);
    font-size: 1.6rem;
    font-weight: 600;
    font-style: italic;
    letter-spacing: 0;
  }

  .magda-link-count {
    font-size: 0.75rem;
    opacity: 0.5;
    font-weight: 300;
    font-style: normal;
    transform: translateY(-4px);
  }

  .magda-mega-menu__collection-link::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 1px;
    background: var(--lux-black);
    transition: width 0.5s ease;
    transform: translateX(-50%);
  }
  .magda-mega-menu__collection-link:hover::after,
  .magda-mega-menu__collection-link.is-active::after {
    width: 100%;
  }

  /* Visual Column */
  .magda-mega-menu__preview-frame {
    position: relative;
    width: 100%;
    aspect-ratio: 3 / 4;
    overflow: hidden;
    background: var(--lux-grey);
    border: 1px solid rgba(0, 0, 0, 0.03);
  }

  .magda-img-container {
    width: 100%;
    height: 100%;
    transition: transform 0.8s ease
    , opacity 0.6s ease;
  }
  .magda-img-container.is-transitioning {
    transform: translateY(10px);
    opacity: 0.3;
  }

  .magda-mega-menu__preview-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 1.5s ease;
  }
  .magda-mega-menu__preview-frame:hover .magda-mega-menu__preview-img {
    transform: scale(1.05);
  }

  .magda-mega-menu__overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 2.5rem;
    background: linear-gradient(to top, rgba(0,0,0,0.3), transparent);
    color: #fff;
  }
  .magda-overlay-title {
    font-family: var(--lux-serif);
    font-size: 1.3rem;
    font-weight: 300;
  }

  /* Products Column */
  .magda-products-track {
    position: relative;
  }
  .magda-products-group {
    display: none;
    animation: fadeUp 0.6s ease forwards;
  }
  .magda-products-group.is-active {
    display: block;
  }

  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .magda-products-grid {
    display: grid;
    gap: 2rem;
  }

  .magda-menu-product-card {
    display: flex;
    gap: 1.5rem;
    text-decoration: none;
    color: inherit;
    transition: opacity 0.3s ease;
  }
  .magda-menu-product-card:hover {
    opacity: 0.7;
  }
  .magda-menu-product-img {
    width: 80px;
    height: 100px;
    background: var(--lux-grey);
    flex-shrink: 0;
  }
  .magda-menu-product-img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .magda-menu-product-info {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 0.4rem;
  }
  .magda-product-title {
    font-size: 1.1rem;
    text-transform: uppercase;
    letter-spacing: 0.05rem;
    font-weight: 500;
    font-family: var(--lux-sans);
    line-height: 1.3;
  }
  .magda-product-price {
    font-size: 1.1rem;
    font-weight: 300;
    color: #666;
  }

  .magda-related-links {
    margin-top: 2.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(0, 0, 0, 0.05);
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .magda-related-link {
    font-family: var(--lux-sans);
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    text-decoration: none;
    color: #000;
    transition: opacity 0.3s ease;
    position: relative;
    width: fit-content;
  }
  .magda-related-link:hover {
    opacity: 0.6;
  }
  .magda-related-link::before {
    content: "â†’";
    margin-right: 0.8rem;
    font-size: 0.9rem;
  }

  @media screen and (max-width: 990px) {
    .magda-mega-menu {
      cursor: auto !important;
    }
    .magda-custom-cursor {
      display: none;
    }
    .magda-mega-menu__split-layout {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    .magda-mega-menu__image-col,
    .magda-mega-menu__products-col {
      display: none;
    }
    .magda-mega-menu__inner {
      padding: 0 4rem;
    }
  }
</style>

<script>
  if (!window.magdaMegaMenuDynamicInitialized) {
    const cursor = document.getElementById('magda-custom-cursor');
    const menu = document.querySelector('.magda-mega-menu');
  
    document.addEventListener('mousemove', (e) => {
      if (cursor) {
        cursor.style.left = e.clientX + 'px';
        cursor.style.top = e.clientY + 'px';
      }
    });
  
    document.addEventListener('mouseover', (e) => {
      const link = e.target.closest('.magda-mega-menu__collection-link');
      if (link && window.innerWidth > 990) {
        cursor.style.opacity = '1';
        cursor.style.transform = 'translate(-50%, -50%) scale(1)';
      } else if (cursor) {
        cursor.style.opacity = '0';
        cursor.style.transform = 'translate(-50%, -50%) scale(0)';
      }
  
      if (link) {
        const handle = link.getAttribute('data-collection-handle');
        const imageUrl = link.getAttribute('data-collection-image');
        const collTitle = link.querySelector('.magda-link-text').textContent;
        const imgElement = document.getElementById('mega-menu-preview-image');
        const imgContainer = document.getElementById('mega-menu-image-container');
        const titleElement = document.getElementById('mega-menu-active-title');
        const parent = link.closest('.magda-mega-menu');
  
        // Toggle Products
        const productGroups = parent.querySelectorAll('.magda-products-group');
        productGroups.forEach(group => {
           if (group.getAttribute('data-target-handle') === handle) {
             group.classList.add('is-active');
           } else {
             group.classList.remove('is-active');
           }
        });
  
        // Toggle Image
        if (imgElement && imageUrl && imageUrl !== imgElement.src) {
           parent.querySelectorAll('.magda-mega-menu__collection-link').forEach(l => l.classList.remove('is-active'));
           link.classList.add('is-active');
           imgContainer.classList.add('is-transitioning');
           
           const highRes = new Image();
           highRes.src = imageUrl;
           highRes.onload = () => {
             imgElement.src = imageUrl;
             setTimeout(() => {
                imgContainer.classList.remove('is-transitioning');
                if(titleElement) titleElement.textContent = collTitle;
             }, 100);
           };
        }
      }
    });
  
    if(menu) {
      menu.addEventListener('mouseleave', () => {
        if(cursor) { cursor.style.opacity = '0'; cursor.style.transform = 'translate(-50%, -50%) scale(0)'; }
      });
    }
  
    window.magdaMegaMenuDynamicInitialized = true;
  }
</script>