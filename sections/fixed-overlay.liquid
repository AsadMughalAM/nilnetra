{% schema %}
  {
    "name": "Fixed Overlay",
    "settings": [
      {
        "type": "color",
        "id": "text_color",
        "label": "Text Color",
        "default": "#ffffff"
      },
      {
        "type": "header",
        "content": "Branding"
      },
      {
        "type": "text",
        "id": "brand_text",
        "label": "Brand Text",
        "default": "ALICIA MOORE"
      },
      {
        "type": "color",
        "id": "brand_color",
        "label": "Brand Color",
        "default": "#ffffff"
      }, {
        "type": "header",
        "content": "Navigation"
      }, {
        "type": "link_list",
        "id": "menu",
        "label": "Menu",
        "default": "main-menu"
      }
    ],
    "presets": [
      {
        "name": "Fixed Overlay"
      }
    ]
  }
{% endschema %}

<style>
  .fixed-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 999;
    /* Ensure it stays above all other content */
    pointer-events: none;
    padding: 2.5vw;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    color: {{ section.settings.text_color }};
  }

  /* Interactive Elements */
  .fixed-overlay a,
  .fixed-overlay button {
    pointer-events: auto;
    color: inherit;
    text-decoration: none;
  }

  /* --- 1. TOP SECTION (Nav + Currency) --- */
  .overlay-top {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .overlay-nav ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    gap: 20px;
  }

  .overlay-nav li a,
  .overlay-currency {
    text-transform: uppercase;
    font-size: 12px;
    letter-spacing: 0.05em;
  }

  /* --- 2. MIDDLE SECTION (Brand + CTA) --- */
  .overlay-middle {
    width: 100%;
    display: flex;
    justify-content: space-between;
    /* Brand Left, Text Right */
    align-items: center;
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
    padding: 0 2.5vw;
    /* Match container padding */
  }

  .overlay-brand a {
    color: {{ section.settings.brand_color | default: section.settings.text_color }}
     !important;
  }

  .overlay-brand h1 {
    margin: 0;
    font-size: 16px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    line-height: 1;
    color: {{ section.settings.brand_color | default: section.settings.text_color }} !important;
  }

  .overlay-cta {
    text-align: right;
    max-width: 200px;
  }

  .overlay-cta span {
    display: block;
    font-size: 14px;
    line-height: 1.4;
  }

  /* --- 3. BOTTOM SECTION (Bag) --- */
  .overlay-bottom {
    display: flex;
    align-items: flex-end;
  }

  .overlay-bag button {
    background: none;
    border: none;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    cursor: pointer;
    font-family: inherit;
    padding: 0;
  }

  @media (max-width: 768px) {
    .fixed-overlay,
    .overlay-middle {
      padding-left: 5vw;
      padding-right: 5vw;
    }
  }
</style>

<div class="fixed-overlay">
  <!-- Top: Nav & Currency -->
  <div class="overlay-top">
    <nav class="overlay-nav">
      {% if section.settings.menu != blank %}
        <ul>
          {% for link in linklists[section.settings.menu].links %}
            <li>
              <a href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </nav>
    <div class="overlay-currency">
      <span>EUR ($) &darr;</span>
    </div>
  </div>

  <!-- Middle: Brand (Left) & CTA (Right) -->
  <div class="overlay-middle">
    <div class="overlay-brand">
      <a href="{{ routes.root_url }}">
        <h1>{{ section.settings.brand_text }}</h1>
      </a>
    </div>

    <div class="overlay-cta">
      <a href="/collections/all">
        <span>Explore</span>
        <span>the New Collection</span>
      </a>
    </div>
  </div>

  <!-- Bottom: Bag (Left) -->
  <div class="overlay-bottom">
    <div class="overlay-bag">
      <button>Bag ({{ cart.item_count }})</button>
    </div>
  </div>
</div>